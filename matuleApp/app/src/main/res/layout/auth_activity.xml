<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/background"
    android:orientation="vertical">
    <!--Приветствие-->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/roboto_condensed_bold"
        android:gravity="top"
        android:text="✋  Добро пожаловать!"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold" />

    <!--Описание-->
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginEnd="50dp"
        android:fontFamily="@font/roboto"
        android:text="Войдите, чтобы пользоваться функциями приложения"
        android:textColor="@color/black" />

    <!--Вход по почте-->
    <TextView
        android:id="@+id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:paddingTop="100dp"
        android:text="Вход по E-mail"
        android:textColor="@color/description" />
    <!--Поле для ввода почты-->
    <EditText
        android:id="@+id/email"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_corners"
        android:ems="10"
        android:hint="example@mail.com"
        android:inputType="text"
        android:textAlignment="textStart"
        android:textColorHint="@color/icons" />
    <!--Пароль-->
    <TextView
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:paddingTop="10dp"
        android:text="Пароль"
        android:textColor="@color/description" />
    <!--Поле ввода пароля-->
    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_corners"
        android:ems="10"
        android:hint=" "
        android:inputType="textPassword"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--Кнопка входа-->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_corners"
        android:backgroundTint="@color/accent"
        android:text="Далее"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
    <!--Переход на страницу регистрации-->
    <TextView
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:paddingTop="10dp"
        android:text="Зарегистрироваться"
        android:textAlignment="center"
        android:textColor="@color/accent" />
    <!--Предложение зарегестироваться через сторонние сервисы-->
    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/roboto"
        android:paddingTop="10dp"
        android:text="Или войдите с помощью"
        android:textAlignment="center"
        android:textColor="@color/caption" />

    <!--Кнопка регистрации через ВК-->
    <Button
        android:id="@+id/VK"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_white"
        android:paddingBottom="10dp"
        android:text="Войти с VK"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <!--Кнопка регистрации через яндекс-->
    <Button
        android:id="@+id/Yandex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_white"
        android:text="Войти с Yandex"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />
</LinearLayout>